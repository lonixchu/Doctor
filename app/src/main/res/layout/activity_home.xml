<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lonixchu.doctor.booking"
    android:background="@drawable/uperslider">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/doctorhomeedited"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

    </FrameLayout>


        <TextView
            android:id="@+id/textView2"
            android:text="Welcome, LanceBB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/frameLayout"
            android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textView2">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonB"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_marginRight="70dp"
            android:padding="12dp"
            android:clickable="true"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:srcCompat="@drawable/forumiconreal" />

        <TextView
            android:id="@+id/Booking"
            android:layout_width="91dp"
            android:layout_height="26dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="97dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Booking" />

        <TextView
            android:id="@+id/Setting"
            android:layout_width="91dp"
            android:layout_height="26dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Logout" />

        <TextView
            android:id="@+id/Forum"
            android:layout_width="91dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:layout_marginRight="70dp"
            android:layout_marginTop="97dp"
            android:text="Forum"
            android:textAlignment="center"
            android:textSize="20dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonC"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="52dp"
            android:layout_marginLeft="70dp"
            android:padding="12dp"
            android:clickable="true"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:srcCompat="@drawable/recordiconreal" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonD"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="52dp"
            android:layout_marginRight="70dp"
            android:padding="12dp"
            android:clickable="true"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:srcCompat="@drawable/logouticon" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonA"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="70dp"
            android:padding="12dp"
            android:clickable="true"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:srcCompat="@drawable/bookingicon" />

        <TextView
            android:id="@+id/Record"
            android:layout_width="91dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:text="Record"
            android:textAlignment="center"
            android:textSize="20dp" />


    </FrameLayout>


</RelativeLayout>