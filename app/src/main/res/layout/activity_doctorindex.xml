<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lonixchu.doctor.doctorindex"
    android:background="@drawable/uperslider">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/doctorhomeedited"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

    </FrameLayout>


    <TextView
        android:id="@+id/textView2"
        android:text="Please choose the service:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textView2">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonA"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|top"
            android:padding="12dp"
            android:clickable="true"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:srcCompat="@drawable/peoplereal" />

        <TextView
            android:id="@+id/Booking"
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="107dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Find by Doctor" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonB"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="52dp"
            android:padding="12dp"
            android:clickable="true"
            app:backgroundTint="?attr/colorBackgroundFloating"
            app:srcCompat="@drawable/locationicon" />

        <TextView
            android:id="@+id/Forum"
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text="Find Nearby"
            android:textAlignment="center"
            android:textSize="20dp" />




    </FrameLayout>
</RelativeLayout>
